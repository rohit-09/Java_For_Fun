            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/short_stack"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="Example Array - Declare an array of size 4 and store 4 integer variables, 7, 23, 85 and 52 in them."
            android:textColor="@android:color/background_light"
            android:textSize="19sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView308" />

        <TextView
            android:id="@+id/textView310"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="int [] arr = new int [4];\narr[0] = 7;\narr[1] = 23;\narr[2] = 85;\narr[3] = 52;"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView309" />

        <TextView
            android:id="@+id/textView311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="An array named arr of size 4 is declared. To store values in an array, index number is used to locate a certain container in the array. Index number ALWAYS starts with 0; meaning the first container of the array's address will always be 0 (arr[0] in example) and the last container address will be size - 1 (4 - 1 which is 3 so arr[3] in the example above). Access the array containers by putting index number inside the square brackets and then followed by assignment of the value shown in example above.\n\nSimilarly you can also store variables using loops to avoid repetitive statements such as writing arr[0] = 7; arr[1] = 23 and so on. When using loops, it is important to input values from the user since the code cannot change value by itself unlike the example above where all the slots are hardcoded."
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView310" />

