<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="taqbir.alam.com.javaforfun.FragmentClass_MainMenu">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FragmentClass_Basics">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".main_menu"
                tools:showIn="@layout/app_bar_main">

                <android.support.constraint.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_dark"
                    tools:context=".MainActivity"
                    tools:layout_editor_absoluteY="81dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="60dp"
                        android:text="Let's Get Started!"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintVertical_bias="0.965" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="221sp"
                        android:layout_height="87dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="460dp"
                        android:fontFamily="short_stack"
                        android:gravity="center"
                        android:text="If you are new to programming, we highly suggest starting from the basics. However feel free to visit any topic to begin exercises"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.51"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.551" />

                    <ImageButton
                        android:id="@+id/basics_btn"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="120dp"
                        android:layout_marginRight="120dp"
                        android:layout_marginBottom="279dp"
                        android:background="@drawable/buttonshape"
                        android:src="@drawable/basic"
                        android:text="Button"
                        android:clickable="true"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageButton
                        android:id="@+id/conditionals_btn"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="280dp"
                        android:background="@drawable/buttonshape"
                        android:src="@drawable/conditionals"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.512"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageButton
                        android:id="@+id/loops_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginEnd="120dp"
                        android:layout_marginRight="120dp"
                        android:layout_marginBottom="144dp"
                        android:background="@drawable/buttonshape"
                        android:src="@drawable/loops"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageButton
                        android:id="@+id/arrays_btn"


                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginBottom="144dp"
                        android:background="@drawable/buttonshape"
                        android:src="@drawable/arrays"
                        android:text="Button"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.506"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Basics"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintEnd_toEndOf="@+id/basics_btn"
                        app:layout_constraintStart_toStartOf="@+id/basics_btn"
                        app:layout_constraintTop_toBottomOf="@+id/basics_btn" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Conditionals"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintEnd_toEndOf="@+id/conditionals_btn"
                        app:layout_constraintStart_toStartOf="@+id/conditionals_btn"
                        app:layout_constraintTop_toBottomOf="@+id/conditionals_btn" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Loops"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintEnd_toEndOf="@+id/loops_btn"
                        app:layout_constraintStart_toStartOf="@+id/loops_btn"
                        app:layout_constraintTop_toBottomOf="@+id/loops_btn" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Arrays"
                        android:textColor="@android:color/background_light"
                        app:layout_constraintEnd_toEndOf="@+id/arrays_btn"
                        app:layout_constraintStart_toStartOf="@+id/arrays_btn"
                        app:layout_constraintTop_toBottomOf="@+id/arrays_btn" />

                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>
</FrameLayout>